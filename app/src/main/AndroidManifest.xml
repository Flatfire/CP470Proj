<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cp470.healthyhawk" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/healthyhawk_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/healthyhawk_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthyHawk" >
        <activity
            android:name=".Login_Screen"
            android:exported="true" />
        <activity
            android:name=".User_Introduction"
            android:exported="true"
            android:label="@string/label_user_introduction"
            android:parentActivityName=".Main_Activity" />
        <activity
            android:name=".Book_Facilities"
            android:exported="true"
            android:label="@string/label_book_facilities"
            android:parentActivityName=".Home_Screen" />
        <activity
            android:name=".Weight_Log"
            android:exported="true"
            android:label="@string/label_weight_log"
            android:parentActivityName=".Home_Screen" />
        <activity
            android:name=".Exercise_Log"
            android:exported="true"
            android:label="@string/label_exercise_log"
            android:parentActivityName=".Home_Screen" />
        <activity
            android:name=".Home_Screen"
            android:exported="true"
            android:label="@string/label_home_screen"
            android:theme="@style/Theme.HealthyHawk.NoActionBar" />
        <activity
            android:name=".Main_Activity"
            android:exported="true"
            android:theme="@style/Theme.HealthyHawk.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>